<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2> <%= pluralize(@post.errors.count, "error") %>
        prohibited this article from being saved:</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p> 
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => 'form_input_title' %>
  </p>

  <p>
    <%= f.label :post_text %><br>
    <%= f.text_area :post_text, :class => 'form_input_text' %>
  </p>

  <p><%= f.submit :class => 'button' %></p>
<% end %>
